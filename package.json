{
    "name": "helectron",
    "version": "0.2.1",
    "description": "Helectron - System Info Viewer",
    "author": "Dung Nguyen Tuan <ntddebugger@gmail.com> (https://dungwinux.github.io)",
    "license": "GPL-3.0",
    "main": "main.js",
    "repository": "https://github.com/dungwinux/helectron",
    "keywords": [
        "Electron",
        "system",
        "info"
    ],
    "scripts": {
        "start": "electron .",
        "dist": "build"
    },
    "devDependencies": {
        "electron": "^2.0.8",
        "electron-builder": "^20.0.6"
    },
    "build": {
        "appId": "com.dungwinux.helectron",
        "productName": "Helectron",
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        },
        "linux": {
            "target": "rpm",
            "icon": "build/icon.png",
            "category": "Utility"
        }
    }
}
